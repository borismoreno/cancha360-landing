---
// src/components/Testimonials.astro
const testimonials = [
  { quote: "¡Organizar los partidos de la liga barrial es mil veces más fácil ahora! Adiós a los grupos de chat caóticos.", name: "Carlos R.", team: "Los Cracks FC" },
  { quote: "Me encanta poder ver mis estadísticas después de cada partido. ¡Motiva a mejorar!", name: "Sofía M.", team: "Guerreras del Sur" },
  { quote: "Conseguimos los jugadores que nos faltaban para el campeonato gracias a la app. ¡Totalmente recomendada!", name: "Andrés V.", team: "Atlético Pambazo" },
];
---
<section class="py-16 lg:py-24 bg-white">
    <div class="container mx-auto px-6">
        <h2 class="text-3xl md:text-4xl font-bold text-center mb-12">Lo que Dicen Nuestros Usuarios</h2>
        <div class="grid md:grid-cols-3 gap-8">
            {testimonials.map(testimonial => (
                <blockquote class="bg-gray-50 p-6 rounded-lg shadow-sm border-l-4 border-green-500">
                    <p class="text-gray-700 italic mb-4">"{testimonial.quote}"</p>
                    <footer class="text-right">
                        <span class="font-semibold">{testimonial.name}</span>
                        <span class="block text-sm text-gray-500">{testimonial.team}</span>
                        {/* Opcional: Estrellas */}
                        <div class="flex justify-end text-yellow-400 mt-1">
                            {'★'.repeat(5)}
                        </div>
                    </footer>
                </blockquote>
            ))}
        </div>
    </div>
</section>